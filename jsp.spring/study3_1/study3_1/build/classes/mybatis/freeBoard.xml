<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.free.dao.IFreeBoardDao">

	<select id="getTotalRowCount" resultType="int"
		parameterType="com.study.free.vo.FreeBoardVO">
		SELECT count(*)
		FROM free_board
	</select>

	<select id="getBoardList" resultType="com.study.free.vo.FreeBoardVO" parameterType="com.study.free.vo.FreeBoardSearchVO">
		SELECT * FROM
		free_board
	</select>

	<select id="getBoard" resultType="com.study.free.vo.FreeBoardVO"
		parameterType="int">
		SELECT *
		FROM free_board
		WHERE bo_no=#{boNo}

	</select>

	<update id="increaseHit" parameterType="int">
		UPDATE free_board
		SET bo_hit=bo_hit+1
		WHERE bo_no=#{boNo}
	</update>
	
</mapper>